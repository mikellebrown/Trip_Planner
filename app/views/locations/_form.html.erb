<h1><%= @location.id ? 'Edit Location' : 'Create Location' %></h1>
<hr />
<%= form_with(model: [@trip, @location], local: true, class: "ui form") do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <%= f.label :days %>
  <%= f.number_field :days, required: true %>
  <%= f.submit class: "ui green button small" %>
<% end %>